{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "target": "ES2015",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "nodenext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}